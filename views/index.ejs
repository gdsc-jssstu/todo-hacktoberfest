<%- include("./partials/header") %>

<div class="box">
  <h1>To-Do List</h1>
  <form action="add/todo"class="new" method="POST">
    <div class="item1"><input type="text" name="todo" id=""class="item1child" placeholder="Enter Task" /></div>
    <div class="item2"><button type="submit"class="item2child">ADD</button></div>
    <div class="dropdown">
      <button class="dropdown" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
       <img src="img/vertical-dots.svg">
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="#">Uncheck all items</a></li>
        <li><a class="dropdown-item" href="#">Filter Items</a></li>
        <li><a class="dropdown-item" href="#">Delete checked items</a></li>
      </ul>
    </div>
  </form>
  <div class="box2">
  <ul>
    <!-- from routes/index.js we take the data from db and display it here  -->
    <!-- js code -->
    <% todo.forEach(todos => { %>

    <li class="listItem">
      <form action="delete/<%= todos._id %>" method="POST">
      <input type="checkbox"name="checkbox" class="checkbox" >
      <label><%= todos.todo %></label>
      <input type="submit" value="X" />
      </form>
    </li>
    <% }) %>
  </ul>
</div>
</div>


